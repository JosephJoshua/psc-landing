---
import { Icon } from 'astro-icon';
import AppButton from './app-button.astro';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<AppButton
  id="scroll-up-button"
  class:list={['flex items-center justify-center', className]}
  title="Scroll up"
  aria-label="Scroll ke atas"
>
  <Icon name="arrow-up" class="h-6" />
</AppButton>

<script>
  import invariant from 'tiny-invariant';

  const button = document.getElementById('scroll-up-button');
  invariant(button, 'button should not be null');

  button.addEventListener('click', () => {
    console.log('click');
    window.scrollTo(window.scrollX, 0);
  });
</script>
